---
import "@fontsource-variable/inter";
import { ViewTransitions } from "astro:transitions";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import IntroSection from "../components/IntroSection.astro";

export const prerender = true;
---

<html lang="en">
  <head>
        <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f5712c" />
    <meta name="msapplication-TileColor" content="#f5f5f5" />
    <meta name="theme-color" content="#f5f5f5" />
    <meta name="viewport" content="width=device-width" />
    <title>Shikanime Studio</title>
    <meta
      name="description"
      content="Where ideas collide and imagination soars, we are proud dreamers on the mission to make them a reality"
    />
    <ViewTransitions />
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-FJ39X8JKGM"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-FJ39X8JKGM");
    </script>
  </head>
  <body>
    <div class="max-h-screen overflow-y-scroll scroll-smooth">
      <Hero />
      <IntroSection />
      <Footer />
    </div>
  </body>
</html>
